# Port API credentials
PORT_CLIENT_ID=your_port_client_id
PORT_CLIENT_SECRET=your_port_client_secret
PORT_API_URL=https://api.getport.io/v1

# Entities configuration
# Option 1: Entities config as JSON string
# ENTITIES_CONFIG_JSON={"blueprints":[{"identifier":"service","search_query":{"combinator":"and","rules":[]}}]}

# Option 2: Entities config file path
ENTITIES_CONFIG=config.json

# BigQuery configuration
BIGQUERY_PROJECT_ID=your_project_id
BIGQUERY_DATASET_ID=port_entities

# Schema migration mode (weak/balanced/hard)
AUTO_MIGRATE=weak

# Google Cloud authentication
# Option 1: Service account key file path
GOOGLE_APPLICATION_CREDENTIALS=/path/to/your/service-account-key.json

# Option 2: Service account key as JSON (alternative to file path)
# GOOGLE_APPLICATION_CREDENTIALS_JSON={"type": "service_account", ...}

# Note: For both entities and Google Cloud authentication, only one option is required.
# If both are set, the JSON option takes precedence.
